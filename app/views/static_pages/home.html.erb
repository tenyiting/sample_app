<%= provide :title, t(:home) %>

<h1><%= t :greetings %></h1>
<p>
  <%= t :p_1 %>
  <a href="http://www.railstutorial.org/">
  <%= t :p_2 %></a>
  <%= t :p_3 %>
  <%= link_to t(:sign_up), signup_path, class: "btn btn-lg btn-primary" %>
  <br>
  <%= Date.today %>
</p>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<% end %>
