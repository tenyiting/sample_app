<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:h_title) , "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t(:home), home_path %></li>
      <li><%= link_to t(:help), help_path %></li>

      <% if logged_in? %>
        <li><%= link_to t(:users), "#" %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t(:account) %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t(:profile), current_user %></li>
            <li><%= link_to t(:settings), '#' %></li>
            <li class="divider"></li>
            <li> <%= link_to t(:log_out), logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t(:log_in), login_path %></li>
      <% end %>

      <li><%= link_to t(:c_en), locale: :en %></li>
      <li><%= link_to t(:c_ja), locale: :ja %></li>
      </ul>
    </nav>
  </div>
</header>
